{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "lib",
		"target": "es6",
		"module": "commonjs",
		"plugins": [
			{
				"name": "typescript-tslint-plugin"
			}
		],
		"lib": ["es2017"],
		"declaration": true,
		"strict": true,
		"noUnusedLocals": true,
		"sourceMap": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["**/node_modules/**", "**/lib/**", "test"]
}
