{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"target": "es6",
		"module": "commonjs",
		"plugins": [
			{
				"name": "tslint-language-service"
			}
		],
		"lib": ["es2017"],
		"declaration": true,
		"strict": true,
		"noUnusedLocals": true
	},
	"exclude": ["**/node_modules/**", "**/dist/**", "test"]
}
